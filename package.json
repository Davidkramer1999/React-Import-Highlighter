{
  "name": "liblinkerjs",
  "displayName": "LibLinkerJs",
  "description": "",
  "version": "0.0.1",
  "engines": {
    "vscode": "^1.81.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "onLanguage:javascriptreact",
    "onLanguage:typescriptreact"
  ],
  "main": "./extension.js",
  "contributes": {
    "commands": [
      {
        "command": "liblinkerjs.checkImports",
        "title": "Check Library Imports"
      }
    ],
    "configuration": {
      "title": "LibLinkerJs",
      "properties": {
        "liblinkerjs.packageJsonPath": {
          "type": "string",
          "default": "./package.json",
          "description": "Path to your package.json relative to the workspace root."
        },
        "liblinkerjs.highlightColor": {
          "type": "string",
          "default": "rgba(220,220,220,.35)",
          "description": "Customize the highlight color for dependencies."
        }
      }
    }
  },
  "scripts": {
    "lint": "eslint .",
    "pretest": "npm run lint",
    "test": "node ./test/runTest.js"
  },
  "devDependencies": {
    "@types/glob": "^8.1.0",
    "@types/mocha": "^10.0.1",
    "@types/node": "20.2.5",
    "@types/vscode": "^1.81.0",
    "@vscode/test-electron": "^2.3.2",
    "eslint": "^8.41.0",
    "eslint-plugin-react": "^7.33.2",
    "glob": "^8.1.0",
    "mocha": "^10.2.0",
    "typescript": "^5.1.3"
  }
}
